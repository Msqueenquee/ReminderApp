    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp">

    <CheckBox
        android:id="@+id/reminderCheckBox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/titleTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/reminderCheckBox"
        android:layout_marginStart="8dp"
        android:text="Reminder Title"
        android:textStyle="bold"
        android:textSize="17sp"
        android:textColor="@color/black"/>

    <TextView
        android:id="@+id/noteTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleTextView"
        android:layout_toEndOf="@id/reminderCheckBox"
        android:layout_marginStart="8dp"
        android:text="Reminder Note"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/timeTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/noteTextView"
        android:layout_toEndOf="@id/reminderCheckBox"
        android:layout_marginStart="8dp"
        android:text="Reminder Time"
        android:textSize="14sp"
        android:textColor="#FF0000"/>

        <ImageView
            android:id="@+id/photoImageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_below="@id/timeTextView"
            android:layout_marginTop="8dp"
            android:layout_toEndOf="@id/reminderCheckBox"
            android:contentDescription="Reminder Photo"
            android:visibility="gone" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/photoImageView"
        android:layout_marginTop="8dp"
        android:background="#E0E0E0" />
</RelativeLayout>
